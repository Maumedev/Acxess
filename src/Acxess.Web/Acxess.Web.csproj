			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\shared\Acxess.Infrastructure\Acxess.Infrastructure.csproj" />
    <ProjectReference Include="..\modules\Acxess.Identity\Acxess.Identity.csproj" />
    <ProjectReference Include="..\modules\Acxess.Catalog\Acxess.Catalog.csproj" />
    <ProjectReference Include="..\modules\Acxess.Membership\Acxess.Membership.csproj" />
    <ProjectReference Include="..\modules\Acxess.Billing\Acxess.Billing.csproj" />
    <ProjectReference Include="..\modules\Acxess.Marketing\Acxess.Marketing.csproj" />
  </ItemGroup>

</Project>
