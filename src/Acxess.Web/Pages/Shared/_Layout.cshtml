                <span class="tooltip">Socios<span class="text-gray-400 text-[10px] ml-1">Ctrl+3</span></span>
            </a>

            <a href="/Catalog" class="menu-item group relative w-full h-12 flex items-center justify-center cursor-pointer transition-all @GetNavLinkClass("/Catalog")"">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg>
                <span class="tooltip">Catálogos <span class="text-gray-400 text-[10px] ml-1">Ctrl+4</span></span>
            </a>

        </div>

        <div class="mt-auto mb-4 flex flex-col gap-4 items-center w-full">
           
            <div class=" menu-item group relative w-10 h-10 rounded-full  border-2 border-slate-700 cursor-pointer hover:border-blue-500 transition bg-primary/10 dark:bg-primary/20 flex items-center justify-center text-primary dark:text-primary-hover font-bold text-xs border border-primary/20">
                   <span> @(User.Identity?.Name?.Substring(0,1).ToUpper() ?? "U")</span>
                    <span class="tooltip">@(User.Identity?.Name ?? "Invitado")<span class="text-gray-400 text-[10px] ml-1"></span></span>
            </div>

             <button type="button" @@click="toggleTheme()" class=" menu-item group relative h-12 flex items-center justify-center cursor-pointer transition-all  text-slate-400 hover:text-primary transition-colors cursor-pointer">
                <svg x-show="darkMode" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                <svg x-show="!darkMode" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
                <span x-show="darkMode" class="tooltip">Light Mode<span class="text-gray-400 text-[10px] ml-1"></span></span>
                <span x-show="!darkMode" class="tooltip">Dark Mode<span class="text-gray-400 text-[10px] ml-1"></span></span>
            </button>

            <form asp-area="" asp-page="/Identity/LogOut" method="post" class="w-full">
                <button  type="submit"  class="menu-item group relative w-full h-12 flex items-center justify-center cursor-pointer transition-all inactive-module">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                    <span class="tooltip">Cerrar Sesión <span class="text-gray-400 text-[10px] ml-1"></span></span>
                </button>
            </form>
        </div>
    </nav>

    <div class="flex-1 flex flex-col h-full overflow-hidden relative">
        <main class="flex-1 overflow-hidden">
            <div class="h-full w-full flex items-center justify-center text-gray-400 bg-slate-300 dark:bg-[#0b0f19]">
                @RenderBody()
             </div>
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 


