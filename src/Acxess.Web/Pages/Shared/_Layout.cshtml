@{
    string GetNavLinkClass(string path, bool exact = false)
    {
        var currentPath = Context.Request.Path.Value?.ToLower() ?? "/";
        var targetPath = path.ToLower();
        bool isActive = exact ? currentPath == targetPath : currentPath.StartsWith(targetPath) && targetPath != "/";

        if (isActive)
        {
            return "bg-white dark:bg-white/10 text-primary dark:text-white border-l-4 border-primary shadow-sm dark:shadow-none group flex items-center gap-x-3 px-4 py-2 text-sm font-medium transition-all";
        }
        else
        {
            return "text-slate-600 dark:text-slate-400 hover:bg-slate-200/50 dark:hover:bg-white/5 hover:text-slate-900 dark:hover:text-white border-l-4 border-transparent group flex items-center gap-x-3 px-4 py-2 text-sm font-medium transition-all";
        }
    }

    bool IsSectionActive(string path)
    {
        var currentPath = Context.Request.Path.Value?.ToLower() ?? "/";
        return currentPath.StartsWith(path.ToLower());
    }
}

