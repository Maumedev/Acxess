@using Microsoft.AspNetCore.Identity
@using Acxess.Identity.Domain.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acxess Enterprise</title>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/alpine.min.js" defer asp-append-version="true"></script> 
    <script src="~/lib/htmx.min.js" asp-append-version="true"></script>

    <meta name="htmx-config" content='{"includeAspNetAntiforgeryToken": true}' />
</head>
<body class="h-full bg-slate-100 dark:bg-[#0b0f19]" 
    x-data="layout()">
    
    @Html.AntiForgeryToken()

    <partial name="_Sidebar" />
    
    <div class="lg:pl-64 flex flex-col min-h-screen">
            
        <partial name="_Navbar" />

        <main class="py-8 bg-slate-100 dark:bg-[#0b0f19] flex-1">
            <div class="px-4 sm:px-6 lg:px-8  mx-auto">
                <div class="bg-white dark:bg-[#151b28] border border-slate-200 dark:border-slate-800 rounded shadow-sm min-h-[300px] p-6">
                    @RenderBody()
                </div>
            </div>
        </main>

    </div>

    <partial name="_LateralSlider" />
    <partial name="_Toast" />

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>