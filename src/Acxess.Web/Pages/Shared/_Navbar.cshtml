<div class="sticky top-0 z-40 flex h-14 shrink-0 items-center justify-between border-b border-slate-200 bg-white dark:bg-[#0b0f19] dark:border-slate-800 px-4 shadow-sm sm:px-6 lg:px-8">
    
    <div class="flex items-center gap-4">
        <button type="button" @@click="sidebarOpen = true" class="-m-2.5 p-2.5 cursor-pointer text-slate-700 dark:text-slate-200 lg:hidden">
            <span class="sr-only">Menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" /></svg>
        </button>
        <h1 class="text-sm font-semibold text-slate-800 dark:text-slate-100">@ViewData["Title"]</h1>
    </div>

    <div class="flex items-center gap-x-6">
        <button type="button" @@click="toggleTheme()" class="text-slate-400 hover:text-primary transition-colors cursor-pointer">
                <svg x-show="darkMode" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
                <svg x-show="!darkMode" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
        </button>

        <div class="flex items-center gap-3 pl-6 border-l border-slate-200 dark:border-slate-700">
            <div class="text-right hidden sm:block">
                <p class="text-xs font-medium text-slate-700 dark:text-slate-200">
                    @(User.Identity?.Name ?? "Invitado")
                </p>
                @* <p class="text-[10px] text-slate-400">Administrador</p> *@
                <p class="text-[10px] text-green-400">En linea</p>
                
            </div>
            <div class="h-8 w-8 rounded bg-primary/10 dark:bg-primary/20 flex items-center justify-center text-primary dark:text-primary-hover font-bold text-xs border border-primary/20">
                    @(User.Identity?.Name?.Substring(0,1).ToUpper() ?? "U")
            </div>
        </div>
    </div>
</div>
