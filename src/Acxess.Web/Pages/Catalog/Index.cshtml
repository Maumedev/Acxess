@page
@model Acxess.Web.Pages.Catalog.IndexModel
@{
    ViewData["Title"] = "Configuración de Catálogos";

    // Función local simple para detectar la pestaña activa en el sub-menú
}
@* Contenedor Principal (Ocupa el 100% del layout padre) *@
<div class="h-full flex flex-col bg-gray-100 dark:bg-[#0b0f19] transition-colors duration-300"
     x-data="{ filter: '' }">

    <header class="bg-white dark:bg-slate-800 p-6 pb-4 shrink-0">
        <div class="flex justify-between items-end">
            <div>
                <h1 class="text-2xl font-bold tracking-tight text-slate-800 dark:text-white">
                    Configuración de <span class="text-blue-600 dark:text-blue-400">Catálogos</span>
                </h1>
                <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">
                    Selecciona el módulo que deseas administrar o editar.
                </p>
            </div>
            
            <div class="relative w-64">
                <span class="absolute left-3 top-2.5 text-gray-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </span>
                <input type="text" x-model="filter" placeholder="Buscar módulo..." 
                       class="w-full pl-9 pr-4 py-2 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 outline-none text-gray-700 dark:text-gray-200 placeholder-gray-400 transition-all">
            </div>
        </div>
    </header>

    <div class="flex-1 overflow-y-auto p-6 custom-scrollbar">
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

            <a href="/Catalog/Plans" 
               x-show="'planes membresias suscripciones'.includes(filter.toLowerCase()) || filter === ''"
               class="group relative bg-white dark:bg-slate-800 p-6 rounded-2xl shadow-sm hover:shadow-xl border border-gray-200 dark:border-slate-700 hover:border-blue-500 dark:hover:border-blue-500 transition-all duration-200 transform hover:-translate-y-1 cursor-pointer flex flex-col h-48">
                
                <div class="absolute top-4 right-4 opacity-10 group-hover:opacity-100 transition-opacity">
                    <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                </div>

                <div class="w-12 h-12 bg-blue-50 dark:bg-blue-900/30 rounded-xl flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
                </div>
                
                <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-1 group-hover:text-blue-600 dark:group-hover:text-blue-400">Planes de Venta</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Configura mensualidades, visitas, anualidades y precios base.</p>
                
                <div class="mt-auto pt-4 flex items-center gap-2">
                    <span class="text-[10px] font-mono bg-gray-100 dark:bg-slate-700 text-gray-500 dark:text-gray-300 px-2 py-0.5 rounded border border-gray-200 dark:border-slate-600">Alta Prioridad</span>
                </div>
            </a>

            <a href="/Catalog/AddOns" 
               x-show="'addons complementos extras locker toalla'.includes(filter.toLowerCase()) || filter === ''"
               class="group relative bg-white dark:bg-slate-800 p-6 rounded-2xl shadow-sm hover:shadow-xl border border-gray-200 dark:border-slate-700 hover:border-indigo-500 dark:hover:border-indigo-500 transition-all duration-200 transform hover:-translate-y-1 cursor-pointer flex flex-col h-48">
                
                <div class="absolute top-4 right-4 opacity-10 group-hover:opacity-100 transition-opacity">
                    <svg class="w-6 h-6 text-gray-400 group-hover:text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                </div>

                <div class="w-12 h-12 bg-indigo-50 dark:bg-indigo-900/30 rounded-xl flex items-center justify-center text-indigo-600 dark:text-indigo-400 mb-4 group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
                </div>
                
                <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-1 group-hover:text-indigo-600 dark:group-hover:text-indigo-400">Complementos</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Gestiona productos adicionales como lockers, toallas o agua.</p>
            </a>

            <a href="/Catalog/Promotions" 
               x-show="'promociones cupones descuentos'.includes(filter.toLowerCase()) || filter === ''"
               class="group relative bg-white dark:bg-slate-800 p-6 rounded-2xl shadow-sm hover:shadow-xl border border-gray-200 dark:border-slate-700 hover:border-pink-500 dark:hover:border-pink-500 transition-all duration-200 transform hover:-translate-y-1 cursor-pointer flex flex-col h-48">
                
                <div class="absolute top-4 right-4 opacity-10 group-hover:opacity-100 transition-opacity">
                    <svg class="w-6 h-6 text-gray-400 group-hover:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                </div>

                <div class="w-12 h-12 bg-pink-50 dark:bg-pink-900/30 rounded-xl flex items-center justify-center text-pink-600 dark:text-pink-400 mb-4 group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg>
                </div>
                
                <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-1 group-hover:text-pink-600 dark:group-hover:text-pink-400">Cupones y Promos</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Crea códigos de descuento temporales o reglas de promoción.</p>
            </a>

             <a href="#" 
               x-show="'configuracion ajustes sistema'.includes(filter.toLowerCase()) || filter === ''"
               class="group relative bg-white dark:bg-slate-800 p-6 rounded-2xl shadow-sm hover:shadow-xl border border-gray-200 dark:border-slate-700 hover:border-slate-500 dark:hover:border-gray-400 transition-all duration-200 transform hover:-translate-y-1 cursor-pointer flex flex-col h-48">
                
                <div class="w-12 h-12 bg-gray-100 dark:bg-slate-700 rounded-xl flex items-center justify-center text-gray-600 dark:text-gray-300 mb-4 group-hover:scale-110 transition-transform group-hover:rotate-90 duration-500">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                </div>
                
                <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-1 group-hover:text-slate-600 dark:group-hover:text-gray-300">Ajustes Generales</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">Impuestos, datos de la sucursal y tickets de impresión.</p>
            </a>

        </div>

    </div>

    <div class="bg-gray-50 dark:bg-slate-900/50 p-4 text-center border-t border-gray-200 dark:border-slate-800 text-xs text-gray-400 dark:text-gray-500">
        <p>Tip: Usa el buscador superior para filtrar opciones rápidamente.</p>
    </div>

</div>