@page
@model Acxess.Web.Pages.Membership.AddRenewMemberModel
@{
    ViewData["Title"] = "Mostrador";
}
@* NOTA: No necesitamos <html> ni <body> aquí porque ya vienen del Layout.
   Usamos h-full para llenar el contenedor flex del padre.
*@

<div class="h-full w-full flex flex-col bg-gray-100 dark:bg-[#0b0f19] transition-colors duration-300" 
     x-data="{ 
         searchQuery: '',
         isNewMember: false,
         selectedPlan: 500, 
         locker: false, 
         towel: false,
         amountGiven: 0,
         get total() { return this.selectedPlan + (this.locker ? 50 : 0) + (this.towel ? 20 : 0); },
         get change() { return this.amountGiven > 0 ? (this.amountGiven - this.total) : 0; }
     }"
     x-init="$nextTick(() => $refs.searchInput.focus())">

    @* <header class="bg-white dark:bg-slate-800 p-3 flex justify-between items-center shadow-sm border-b border-gray-200 dark:border-slate-700 shrink-0 z-10">
        <div class="flex items-center gap-4">
            <h2 class="text-lg font-bold tracking-tight text-slate-700 dark:text-white">
                Mostrador <span class="text-blue-600 dark:text-blue-400">Rápido</span>
            </h2>
            <span class="bg-green-100 text-green-700 border border-green-200 dark:bg-green-900/30 dark:text-green-400 dark:border-green-800 text-xs px-2 py-0.5 rounded">Sistema Online</span>
        </div>
        <div class="text-sm text-gray-400 dark:text-gray-500">
            Caja: <span class="text-gray-700 dark:text-gray-300 font-semibold">Principal</span>
        </div>
    </header> *@

    <div class="flex-1 grid grid-cols-12 gap-0 overflow-hidden">

        <section class="col-span-4 bg-white dark:bg-slate-800 border-r border-gray-200 dark:border-slate-700 p-6 flex flex-col gap-6 overflow-y-auto custom-scrollbar">
            
            <div>
                <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 uppercase mb-1">
                    1. Identificar Cliente <span class="bg-slate-200 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-1.5 rounded text-[10px] ml-2 font-mono">F1</span>
                </label>
                <div class="relative group">
                    <input x-ref="searchInput" type="text" x-model="searchQuery" placeholder="Buscar por nombre, ID o teléfono..." 
                           class="w-full p-3 bg-gray-50 dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm 
                                  focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:focus:border-blue-500 outline-none text-lg 
                                  text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 transition-all">
                    <div class="absolute right-3 top-3.5 text-gray-400 group-focus-within:text-blue-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                    </div>
                </div>
                
                <div x-show="searchQuery.length > 0" class="mt-2 bg-white dark:bg-slate-900 border border-gray-200 dark:border-slate-600 rounded-md shadow-lg overflow-hidden">
                    <div class="p-3 hover:bg-gray-50 dark:hover:bg-slate-800 cursor-pointer border-b border-gray-100 dark:border-slate-700 flex justify-between group">
                        <div>
                            <p class="font-bold text-gray-800 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400">Juan Pérez</p>
                            <p class="text-xs text-gray-500">ID: 1024 • Vencido hace 3 días</p>
                        </div>
                        <span class="text-red-600 dark:text-red-400 font-bold text-xs bg-red-100 dark:bg-red-900/30 px-2 py-1 rounded h-fit">Vencido</span>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-2 my-2">
                <div class="h-px bg-gray-200 dark:bg-slate-600 flex-1"></div>
                <span class="text-gray-400 dark:text-gray-500 text-xs font-semibold">O REGISTRAR NUEVO</span>
                <div class="h-px bg-gray-200 dark:bg-slate-600 flex-1"></div>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nombre Completo</label>
                    <input type="text" class="mt-1 block w-full p-2 bg-gray-50 dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:focus:ring-blue-500 text-gray-900 dark:text-white">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Teléfono</label>
                        <input type="tel" class="mt-1 block w-full p-2 bg-gray-50 dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-md focus:ring-blue-500 focus:border-blue-500 text-gray-900 dark:text-white">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email (Opcional)</label>
                        <input type="email" class="mt-1 block w-full p-2 bg-gray-50 dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-md focus:ring-blue-500 focus:border-blue-500 text-gray-900 dark:text-white">
                    </div>
                </div>
            </div>
        </section>


        <section class="col-span-5 bg-gray-50 dark:bg-[#0f1523] border-r border-gray-200 dark:border-slate-700 p-6 flex flex-col gap-6 overflow-y-auto custom-scrollbar">
            <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 uppercase">
                2. Seleccionar Plan <span class="bg-slate-200 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-1.5 rounded text-[10px] ml-2 font-mono">F2</span>
            </label>

            <div class="grid grid-cols-2 gap-4">
                <div @@click="selectedPlan = 500" 
                     :class="selectedPlan === 500 ? 'ring-2 ring-blue-500 bg-white dark:bg-slate-800' : 'bg-white dark:bg-slate-800 border-gray-200 dark:border-slate-700 hover:border-blue-300 dark:hover:border-blue-500'"
                     class="cursor-pointer p-4 rounded-xl border shadow-sm transition-all relative">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="font-bold text-gray-800 dark:text-white">Mensualidad</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Acceso total 30 días</p>
                        </div>
                        <span class="text-lg font-bold text-blue-600 dark:text-blue-400">$500</span>
                    </div>
                    <div x-show="selectedPlan === 500" class="absolute top-2 right-2 text-blue-500">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                    </div>
                </div>

                <div @@click="selectedPlan = 150" 
                     :class="selectedPlan === 150 ? 'ring-2 ring-blue-500 bg-white dark:bg-slate-800' : 'bg-white dark:bg-slate-800 border-gray-200 dark:border-slate-700 hover:border-blue-300 dark:hover:border-blue-500'"
                     class="cursor-pointer p-4 rounded-xl border shadow-sm transition-all relative">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="font-bold text-gray-800 dark:text-white">Semanal</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Acceso 7 días</p>
                        </div>
                        <span class="text-lg font-bold text-blue-600 dark:text-blue-400">$150</span>
                    </div>
                     <div x-show="selectedPlan === 150" class="absolute top-2 right-2 text-blue-500">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                    </div>
                </div>

                <div @@click="selectedPlan = 50" 
                     :class="selectedPlan === 50 ? 'ring-2 ring-blue-500 bg-white dark:bg-slate-800' : 'bg-white dark:bg-slate-800 border-gray-200 dark:border-slate-700 hover:border-blue-300 dark:hover:border-blue-500'"
                     class="cursor-pointer p-4 rounded-xl border shadow-sm transition-all relative">
                    <div class="flex justify-between items-start">
                        <div>
                            <h3 class="font-bold text-gray-800 dark:text-white">Visita</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">1 día</p>
                        </div>
                        <span class="text-lg font-bold text-blue-600 dark:text-blue-400">$50</span>
                    </div>
                     <div x-show="selectedPlan === 50" class="absolute top-2 right-2 text-blue-500">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">Complementos (AddOns)</h4>
                <div class="space-y-3">
                    <label class="flex items-center justify-between p-3 bg-white dark:bg-slate-800 border dark:border-slate-700 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-slate-700 transition">
                        <div class="flex items-center gap-3">
                            <input type="checkbox" x-model="locker" class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 bg-gray-100 dark:bg-slate-900 border-gray-300 dark:border-slate-500">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-200">Renta de Locker</span>
                        </div>
                        <span class="text-sm font-bold text-gray-600 dark:text-gray-400">+$50.00</span>
                    </label>

                    <label class="flex items-center justify-between p-3 bg-white dark:bg-slate-800 border dark:border-slate-700 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-slate-700 transition">
                        <div class="flex items-center gap-3">
                            <input type="checkbox" x-model="towel" class="w-5 h-5 text-blue-600 rounded focus:ring-blue-500 bg-gray-100 dark:bg-slate-900 border-gray-300 dark:border-slate-500">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-200">Toalla limpia</span>
                        </div>
                        <span class="text-sm font-bold text-gray-600 dark:text-gray-400">+$20.00</span>
                    </label>
                </div>
            </div>

            <div class="mt-auto bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg border border-blue-100 dark:border-blue-900/50">
                <div class="flex justify-between text-sm">
                    <span class="text-blue-800 dark:text-blue-300">Inicio: <strong class="text-blue-900 dark:text-blue-200">Hoy</strong></span>
                    <span class="text-blue-800 dark:text-blue-300">Fin: <strong class="text-blue-900 dark:text-blue-200">08 Feb 2026</strong></span>
                </div>
            </div>
        </section>


        <section class="col-span-3 bg-slate-900 dark:bg-slate-950 text-white p-6 flex flex-col justify-between shadow-xl z-20 border-l border-slate-700 dark:border-slate-800">
            
            <div>
                <label class="block text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">
                    Resumen de Venta
                </label>
                
                <div class="space-y-3 text-sm border-b border-gray-700 pb-4 mb-4">
                    <div class="flex justify-between">
                        <span class="text-gray-300">Plan Base</span>
                        <span class="font-mono" x-text="'$' + selectedPlan.toFixed(2)"></span>
                    </div>
                    <div class="flex justify-between text-green-400" x-show="locker" x-transition>
                        <span>+ Locker</span>
                        <span class="font-mono">$50.00</span>
                    </div>
                    <div class="flex justify-between text-green-400" x-show="towel" x-transition>
                        <span>+ Toalla</span>
                        <span class="font-mono">$20.00</span>
                    </div>
                </div>

                <div class="text-right mb-8">
                    <span class="block text-sm text-gray-400 mb-1">Total a Pagar</span>
                    <div class="text-5xl font-bold tracking-tight text-white" x-text="'$' + total.toFixed(2)">$500.00</div>
                </div>

                <div class="mb-6">
                    <label class="block text-xs font-bold text-gray-400 mb-2">DINERO RECIBIDO (Efectivo)</label>
                    <div class="relative group">
                        <span class="absolute left-3 top-3 text-gray-400 text-xl group-focus-within:text-green-500">$</span>
                        <input type="number" x-model="amountGiven" 
                               class="w-full bg-slate-800 dark:bg-slate-900 border border-slate-600 dark:border-slate-700 rounded-lg p-3 pl-8 text-2xl text-white font-mono focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-colors" 
                               placeholder="0.00">
                    </div>
                </div>

                <div class="bg-slate-800 dark:bg-slate-900 rounded-lg p-4 border border-slate-700 dark:border-slate-800 transition-all" 
                     :class="amountGiven > 0 ? 'opacity-100' : 'opacity-50'">
                    <span class="block text-xs text-gray-400 uppercase text-center mb-1">Cambio a devolver</span>
                    <div class="text-3xl font-bold text-center font-mono" 
                         :class="change < 0 ? 'text-red-400' : 'text-green-400'"
                         x-text="change >= 0 ? '$' + change.toFixed(2) : 'Falta dinero'">
                        $0.00
                    </div>
                </div>
            </div>

            <button class="w-full bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-bold py-4 px-6 rounded-lg shadow-lg transform active:scale-95 transition-all mt-4 flex justify-center items-center gap-2">
                <span>CONFIRMAR PAGO</span>
                <span class="bg-blue-800 dark:bg-blue-900 text-xs py-1 px-2 rounded opacity-50 font-mono">Ctrl + Enter</span>
            </button>
            
        </section>

    </div>
</div>